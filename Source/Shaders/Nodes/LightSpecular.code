FIXED4 LightDiffuseSpecular(
	FLOAT4 lightPos, // w contains radius
	FLOAT3 fragPos,
	FIXED3 lightVec,  
	FIXED3 lightHalf,
	HALF4 lightDfColor, // w contains brightness
	HALF3 lightSpColor, // w contains power
	FIXED3 normal, 
	FIXED4 diffuseColor,
	HALF4 specularColor
) {
	return DiffuseSpecularLightPixel(
		lightPos,
		fragPos,
		lightVec,
		lightHalf,
		lightDfColor,
		lightSpColor, 
		normal, 
		diffuseColor,
		specularColor
	);
}
